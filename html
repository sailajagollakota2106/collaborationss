  <script>
    let cartCount = 0;
    let total = 0;

    function addToCart(item, price) {
      cartCount++;
      total += price;
      document.getElementById("cart").innerText = `üõí Cart: ${cartCount} items | Total: ‚Çπ${total}`;
      alert(item + " added to cart!");
    }
